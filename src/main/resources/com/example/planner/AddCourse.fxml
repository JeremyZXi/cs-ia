<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.OnboardingController"
      spacing="15" alignment="TOP_LEFT" prefWidth="550" prefHeight="650">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Course Name -->
    <Label text="Course Name:"/>
    <TextField fx:id="courseNameField" promptText="Enter course name"/>

    <!-- Course Color -->
    <Label text="Course Color:"/>
    <ColorPicker fx:id="colorPicker"/>

    <!-- Letter Days with individual time pickers -->
    <Label text="Select Letter Days and Times:"/>
    <VBox fx:id="letterDayContainer" spacing="10">
        <!-- Dynamically populated in controller -->
    </VBox>

    <!-- Add Course Button -->
    <Button text="Add Course" onAction="#onAddCourse"/>

    <!-- List of Added Courses -->
    <Separator/>
    <Label text="Added Courses:"/>
    <VBox fx:id="courseDisplay" spacing="5"/>

    <!-- Finish Button -->
    <Button text="Finish Setup" onAction="#onFinish"/>

</VBox>
