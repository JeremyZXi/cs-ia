<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.planner.PeriodSetupController"
      spacing="15" alignment="TOP_LEFT" prefWidth="600" prefHeight="600">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Set Your Typical Day Structure"/>

    <VBox fx:id="periodRowsContainer" spacing="10" />

    <Button text="Add Period" onAction="#onAddPeriod"/>

    <Button text="Continue" onAction="#onContinue"/>

</VBox>
